<%- include('includes/head') %>
<%- include('includes/nav') %>

  <div class="container">

    <div class="row">

      <div class="col-lg-2"></div>

      <div class="col-lg-8 my-5">
        <h1 class="display-1 text-center">Sign Up</h1>

        <p class="text-center lead">Sign In or Sign Up now!</p>
        <%- include('includes/messages'); %>

        <div class="row">
          <div class="col-lg">
            <h4>Sign Up</h4>
            <p>If you doesn't have a account do it now!</p>
            
            <form action="/login/register" method="POST">
              <input type="hidden" name="_csrf" value=<%= csrfToken %>>
              <div class="form-group">
                <label>Your e-mail</label>
                <input type="email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email" name="email">
              </div>
              <div class="form-group">
                <label>Your Password</label>
                <input type="password" class="form-control" placeholder="Password" name="password">
              </div>
              <button type="submit" class="btn btn-primary my-3">Create account</button>
            </form>

          </div>




          <div class="col-lg">

            <h4>Sign In</h4>
            <p>Already have a account? Sign in now!</p>

            <form action="/login/login" method="POST">
              <input type="hidden" name="_csrf" value=<%= csrfToken %>>
              <div class="form-group">
                <label>Your e-mail</label>
                <input type="email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email" name="email">
              </div>
              <div class="form-group">
                <label>Your Password</label>
                <input type="password" class="form-control" placeholder="Password" name="password">
              </div>
              <button type="submit" class="btn btn-primary my-3">Sign In</button>
            </form>

          </div>
        </div>

        

      </div>

      <div class="col-lg-2"></div>

    </div>
  </div>

<%- include('includes/footer') %>