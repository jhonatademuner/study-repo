<%- include('includes/head') %>
<%- include('includes/nav') %>

  <div class="container">

    <div class="row">

      <div class="col-lg-2"></div>

      <div class="col-lg-8 my-5">
        <h1 class="display-1 text-center">Contacts</h1>

        <p class="text-center lead">Create or edit your contact bellow!</p>

        <%- include('includes/messages') %>

        <% if(contact._id) { %>
          <form action="/contacts/edit/<%= contact._id%>" method="POST">
        <% }else{ %>
          <form action="/contacts/register" method="POST">
        <% } %>
          <input type="hidden" name="_csrf" value=<%= csrfToken %>>
          <div class="form-group">
            <label>Name</label>
            <input value="<%= contact.name %>" type="name" class="form-control" aria-describedby="emailHelp" placeholder="Enter name" name="name">
          </div>
          <div class="form-group">
            <label>Address</label>
            <input value="<%= contact.address %>" type="text" class="form-control" placeholder="Enter address" name="address">
          </div>
          <div class="form-group">
            <label>Telephone</label>
            <input value="<%= contact.telephone %>" type="text" class="form-control" placeholder="Enter telephone" name="telephone">
          </div>
          <div class="form-group">
            <label>E-mail</label>
            <input value="<%= contact.email %>" type="email" class="form-control" placeholder="Enter e-mail" name="email">
          </div>
          <button type="submit" class="btn btn-primary my-3">Save</button>
        </form>

      </div>

      <div class="col-lg-2"></div>

    </div>
  </div>

<%- include('includes/footer') %>