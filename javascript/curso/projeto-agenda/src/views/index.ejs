<%- include('includes/head') %>
<%- include('includes/nav') %>

  <div class="container">

    <div class="row">

      <div class="col-lg-2"></div>

      <div class="col-lg-8 my-5">
        <h1 class="display-1 text-center">Schedule</h1>

        <p class="text-center lead">Your contacts are bellow!</p>

        <%- include('includes/messages') %>

        <div class="responsive-table">
          <% if (contacts.length > 0) { %>
          <table class="table my-3">

            <% contacts.forEach(function(contact){ %>
              <tr>
                <td><%= contact.name %></td>
                <td><%= contact.address %></td>
                <td><%= contact.telephone %></td>
                <td><%= contact.email %></td>
                <td>
                  <a href="/contacts/index/<%= contact._id%>" class="btn btn-primary">Edit</a>
                  <a href="/contacts/delete/<%= contact._id%>" class="btn btn-danger">Delete</a>
                </td>
              </tr>
            <% }) %>
          <% }else{ %>
            <p class="lead text-center">No contacts found!</p>
          <% } %>
            
          </table>
        </div>

      </div>

      <div class="col-lg-2"></div>

    </div>
  </div>

<%- include('includes/footer') %>